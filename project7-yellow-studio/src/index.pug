//首頁
header#header_index
  .container
    img.icon(src="http://awiclass.monoame.com/img/webpic/w_icon.svg")
    img.marginbottom.mountain(src="http://awiclass.monoame.com/img/margin/m_index.svg")
  .explore.at_top EXPLORE
//關於
section#section_about
  .container
    //第一行-標題
    .row
      .col-sm-8.col-sm-offset-4
        img.tri1(src="http://awiclass.monoame.com/img/webpic/w_tri1.svg")
        h2.r1text WORKS IN YELLOW
        
    //第二行-標題跟兩個三角形
    .row

      .col-sm-4
        img.tri2(src="http://awiclass.monoame.com/img/webpic/w_tri2.svg")

      .col-sm-8
        img.tri3(src="http://awiclass.monoame.com/img/webpic/w_tri3.svg")
        h3.r2text YELLOW STUDIO-Website Design / Development
        h3.r2text Interactive Art Design
        
    //第三行-標題
    .row
      .col-sm-8
        h2.r3text 430 MORE SUCCESS CASES
    .clearfix
    //第三行-按鈕跟兩個三角形
    .row
      .col-sm-4.btn-area
        a.btn.btn-lg.btn-default(href="#section_works") MORE STORY
        img.tri4(src="http://awiclass.monoame.com/img/webpic/w_tri4.svg")

      .col-sm-4
        img.tri5(src="http://awiclass.monoame.com/img/webpic/w_tri5.svg")

  #cross

  img.cat#cat(src="http://awiclass.monoame.com/catpic/cat_leftop.png")
  img.marginbottom(src="http://awiclass.monoame.com/img/margin/m_about.svg")

//服務
section#section_service
  .container
    .row
      .col-sm-12
        h1 Service

      .col-sm-4
        img.icon_service(src="http://awiclass.monoame.com/img/webpic/w_service_icon1.svg")
        h3 CI/VI Design

      .col-sm-4
        img.icon_service(src="http://awiclass.monoame.com/img/webpic/w_service_icon2.svg")
        h3 MotionGraphic

      .col-sm-4
        img.icon_service(src="http://awiclass.monoame.com/img/webpic/w_service_icon3.svg")
        h3 Web Development

//作品
section#section_works
  img.marginbottom.mountain(src="http://awiclass.monoame.com/img/margin/m_works.svg")
  
  .container#app
    .row(v-if="works.length>0")
      .col-sm-12
        h1 Works
      .col-sm-6.work.big
        img(v-bind:src="works[1].img")
        .texts
          h4.title {{works[1].name}}
          p.content(v-html="works[1].content.substr(0,40)")
      .col-sm-6
        .col-sm-6.work(v-for="w in works.slice(2,6)")
          img(v-bind:src="w.img")
          .texts
            h4.title {{w.name}}

//聯絡
section#section_contact
  //三站貓
  img.cat#cat_blue(src="http://awiclass.monoame.com/catpic/cat_blue_cat.png")
  img.cat#cat_grey(src="http://awiclass.monoame.com/catpic/cat_yellow_cat.png")
  img.cat#cat_yellow(src="http://awiclass.monoame.com/catpic/cat_grey_cat.png")
  .container
    .row
      .col-sm-6
        //信件容器 限制最大寬度
        .mails
          //信封
          .mailcover
            img(src="http://awiclass.monoame.com/img/webpic/w_mail_cover.svg")
          //信紙
          .mailbody
            h5 Dear Yellow Studio
            label Name
            input
            label Email
            input
            label Content
            textarea

      .col-sm-6
        h2 CONTACT
        br
        p If you have any question about us,<br>Don`t hestitate to contact us !
        br
        br
        p YELLOWSTUDIO@gmail.com<br>ADDRESS: TAIWAN, TAIPEI , XORO Road<br>Phone: 02-12345678

